@model IEnumerable<ToyStore.Model.DataModels.Order>

<h2>Lista zamówień</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Klient</th>
            <th>Email</th>
            <th>Adres</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.CustomerName</td>
                <td>@order.CustomerEmail</td>
                <td>@order.ShippingAddress</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Szczegóły</a>
                    <a asp-action="ChangeStatus" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Zmień status</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
