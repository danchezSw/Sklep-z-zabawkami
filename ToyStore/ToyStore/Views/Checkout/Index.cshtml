@model ToyStore.ViewModels.VM.CheckoutVm

@{
    ViewData["Title"] = "Finalizacja zamówienia";
}

<div class="container my-5">
    <h2 class="mb-4 text-center">Finalizacja zamówienia</h2>

    <form asp-action="PlaceOrder" method="post">
        <div class="row">
            <div class="col-md-6">
                <h4>Dane klienta</h4>
                <div class="mb-3">
                    <label>Imię i nazwisko</label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input asp-for="CustomerEmail" class="form-control" />
                    <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label>Adres dostawy</label>
                    <textarea asp-for="ShippingAddress" class="form-control"></textarea>
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label>Metoda płatności</label>
                    <select asp-for="PaymentMethod" class="form-select">
                        <option value="Card">Karta</option>
                        <option value="Blik">BLIK</option>
                        <option value="Transfer">Przelew</option>
                    </select>
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <h4>Podsumowanie zamówienia</h4>

                @if (Model.CartItems != null && Model.CartItems.Any())
                {
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Produkt</th>
                                <th>Cena</th>
                                <th>Ilość</th>
                                <th>Łącznie</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                var lineTotal = item.Price * item.Quantity;
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@Url.Content(item.Image)" style="height:50px; margin-right:10px;" />
                                            <div>
                                                <div>@item.ProductName</div>
                                                @if (!string.IsNullOrEmpty(item.Color))
                                                {
                                                    <div class="text-muted" style="font-size:0.9rem;">Kolor: @item.Color</div>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>@item.Quantity</td>
                                    <td>@lineTotal.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="text-end mt-3">
                        <strong>Suma: @Model.CartItems.Sum(x => x.Price * x.Quantity).ToString("C")</strong>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">Twój koszyk jest pusty.</p>
                }
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg">Złóż zamówienie</button>
        </div>
    </form>
</div>
