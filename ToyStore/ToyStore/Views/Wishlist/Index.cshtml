@model List<ToyStore.Web.Models.WishlistItem>

@{
    ViewData["Title"] = "Moja Wishlist";
}

<h2 class="mb-4">🧡 Moja Wishlist</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Twoja wishlista jest pusta.
    </div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Nazwa produktu</th>
                <th>Cena</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Price.ToString("0.00") zł</td>
                    <td>
                        <form asp-action="Remove"
                              method="post"
                              class="d-inline">
                            <input type="hidden" name="productId"
                                   value="@item.ProductId" />
                            <button class="btn btn-sm btn-danger">
                                Usuń
                            </button>
                        </form>

                        <form asp-controller="Cart"
                              asp-action="AddToCart"
                              method="post"
                              class="d-inline ms-2">
                            <input type="hidden"
                                   name="productId"
                                   value="@item.ProductId" />
                            <button class="btn btn-sm btn-success">
                                Do koszyka
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
