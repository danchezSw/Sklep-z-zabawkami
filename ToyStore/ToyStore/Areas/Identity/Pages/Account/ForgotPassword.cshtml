@page
@model ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Odzyskiwanie hasła";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form id="forgotPasswordForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email">Adres e-mail</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <button id="resetPasswordBtn" type="submit" class="w-100 btn btn-lg btn-primary">Wyślij link resetujący</button>

    <div class="mt-3 text-center">
        <a href="javascript:void(0);" data-switch="login">Powrót do logowania</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // 🔹 Obsługa AJAX wysyłania formularza
        document.getElementById("forgotPasswordForm").addEventListener("submit", async function (e) {
            e.preventDefault();
            const form = e.target;

            const formData = new FormData(form);
            const res = await fetch(form.action || "/Identity/Account/ForgotPassword", {
                method: "POST",
                body: formData,
            });

            if (res.ok) {
                showCenteredToast("✉️ Sprawdź swoją skrzynkę e-mail, aby zresetować hasło.");
                form.reset();
            } else {
                showCenteredToast("❌ Wystąpił błąd podczas wysyłania prośby.", "danger");
            }
        });
    </script>
}
