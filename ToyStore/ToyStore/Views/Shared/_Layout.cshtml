@using ToyStore.Web.Models
@using Newtonsoft.Json

@{
    var cartJson = Context.Session.GetString("Cart");
    var cartItems = cartJson == null ? new List<CartItem>() : JsonConvert.DeserializeObject<List<CartItem>>(cartJson);
    int cartCount = cartItems.Sum(x => x.Quantity);
}
@{
    var wishlistJson = Context.Session.GetString("Wishlist");
    var wishlistItems = wishlistJson == null
        ? new List<WishlistItem>()
        : JsonConvert.DeserializeObject<List<WishlistItem>>(wishlistJson);

    int wishlistCount = wishlistItems.Count;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToyStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ToyStore.styles.css" asp-append-version="true" />

    <style>
        .nav-link {
            transition: color 0.3s ease, transform 0.2s ease;
        }

            .nav-link:hover {
                color: #0d6efd !important;
                transform: scale(1.05);
            }

        .btn {
            transition: transform 0.2s ease, filter 0.2s ease;
        }

            .btn:hover {
                transform: scale(1.05);
                filter: brightness(0.9);
            }

        .modal.fade .modal-dialog.modal-slide-down {
            transform: translateY(-100px);
            transition: transform 0.4s ease-out;
        }

        .modal.show .modal-dialog.modal-slide-down {
            transform: translateY(0);
        }

        .modal-backdrop.show {
            backdrop-filter: blur(6px);
            background-color: rgba(0, 0, 0, 0.45);
        }

        .modal-content {
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .logo-img {
            height: 50px;
            width: auto;
            transition: transform 0.3s ease, filter 0.3s ease;
        }

            .logo-img:hover {
                transform: scale(1.1);
                filter: brightness(1.1);
            }

        .cart-count {
            position: absolute;
            top: 0;
            right: -10px;
            background: red;
            color: white;
            font-size: 0.75rem;
            font-weight: bold;
            border-radius: 50%;
            padding: 2px 6px;
        }

        #searchResults, #searchHistory {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border: 1px solid #ddd;
            z-index: 9999;
            max-height: 300px;
            overflow-y: auto;
            display: none;
            width: 100%;
        }

            #searchResults li, #searchHistory li {
                cursor: pointer;
                padding: 5px 10px;
            }

                #searchResults li:hover, #searchHistory li:hover {
                    background-color: #f0f0f0;
                }

        .history-term {
            flex-grow: 1;
        }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="ToyStore logo" class="logo-img" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Shop" asp-action="Index">Sklep</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li class="nav-item ms-3 position-relative">
                            <form class="d-flex" id="searchForm" autocomplete="off">
                                <input id="searchInput" class="form-control form-control-sm" type="text" placeholder="Szukaj produktów..." />
                                <ul id="searchResults" class="list-group position-absolute w-100"></ul>
                                <ul id="searchHistory" class="list-group position-absolute w-100 mt-1"></ul>
                            </form>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto position-relative">
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="fa fa-shopping-cart"></i> Koszyk
                                <span id="cartCount" class="cart-count">@cartCount</span>
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark position-relative" asp-controller="Wishlist" asp-action="Index">
                                🧡 Wishlist
                                @if (wishlistCount > 0)
                                {
                                    <span class="cart-count">@wishlistCount</span>
                                }
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Panel Admina</a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Zarządzanie produktami</a></li>
                                    <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">Zarządzanie kategoriami</a></li>
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Index">Zarządzanie użytkownikami</a></li>
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">Zarządzanie zamówieniami</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Ustawienia konta</a>
                                <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangeAddress">Zmień adres</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Zmień hasło</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <input type="hidden" name="returnUrl" value="/" />
                                    <button type="submit" class="btn btn-link nav-link p-0 text-dark">Wyloguj</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a href="javascript:void(0);" class="nav-link text-dark" data-auth="login">Logowanie</a></li>
                            <li class="nav-item"><a href="javascript:void(0);" class="nav-link text-dark" data-auth="register">Rejestracja</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">@RenderBody()</main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        &copy; 2025 - ToyStore - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <!-- 🔹 Modal -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg modal-slide-down">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="authModalLabel">Logowanie</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zamknij"></button>
                </div>
                <div class="modal-body" id="authModalBody">
                    <div class="text-center text-muted py-4">Ładowanie...</div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🔹 Toast -->
    <div id="centerToast" class="position-fixed top-50 start-50 translate-middle bg-success text-white px-4 py-3 rounded shadow" style="z-index: 2000; display: none; min-width: 300px; text-align: center;"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            const modal = new bootstrap.Modal(document.getElementById("authModal"));
            const modalBody = document.getElementById("authModalBody");
            const modalTitle = document.getElementById("authModalLabel");

            // Funkcje modalu (logowanie/rejestracja/forgot/resend)
            async function loadAuthPage(url, title){
                modalTitle.innerText = title;
                modalBody.innerHTML = '<div class="text-center text-muted py-4">Ładowanie...</div>';
                try{
                    const res = await fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } });
                    const html = await res.text();
                    modalBody.innerHTML = html;
                    modal.show();
                    setupSwitchLinks(); setupRegisterForm(); setupLoginForm(); setupForgotForm(); setupResendForm();
                }catch(err){ modalBody.innerHTML = '<div class="text-danger text-center py-4">Błąd ładowania</div>'; console.error(err);}
            }

            function setupSwitchLinks(){
                modalBody.querySelectorAll("[data-switch]").forEach(link => {
                    link.addEventListener("click", e => {
                        e.preventDefault();
                        const type = link.getAttribute("data-switch");
                        switch(type){
                            case "login": loadAuthPage("/Identity/Account/Login","Logowanie"); break;
                            case "register": loadAuthPage("/Identity/Account/Register","Rejestracja"); break;
                            case "forgot": loadAuthPage("/Identity/Account/ForgotPassword","Przypomnienie hasła"); break;
                            case "resend": loadAuthPage("/Identity/Account/ResendEmailConfirmation","Wyślij ponownie e-mail"); break;
                        }
                    });
                });
            }

            function setupRegisterForm(){ const form = modalBody.querySelector("#registerForm"); if(!form) return;
                form.addEventListener("submit", async e => {
                    e.preventDefault();
                    const formData = new FormData(form);
                    const action = form.getAttribute("action") || window.location.href;
                    try{
                        const res = await fetch(action,{method:"POST", body:formData, headers:{"X-Requested-With":"XMLHttpRequest"}});
                        const text = await res.text();
                        if(text.includes("text-danger")){ modalBody.innerHTML=text; setupRegisterForm(); } else { modal.hide(); showCenteredToast("Konto utworzone pomyślnie!"); }
                    }catch(err){ showCenteredToast("Błąd podczas rejestracji.","danger"); console.error(err);}
                });
            }

            function setupLoginForm(){
                const loginForm = modalBody.querySelector("#loginForm"); if(!loginForm) return;
                loginForm.addEventListener("submit", async function(e){
                    e.preventDefault();
                    const formData = new FormData(loginForm);
                    const action = loginForm.getAttribute("action") || window.location.href;
                    try{
                        const res = await fetch(action,{method:"POST", body:formData, headers:{"X-Requested-With":"XMLHttpRequest"}});
                        const text = await res.text();
                        if(text.includes("text-danger")){ modalBody.innerHTML=text; setupLoginForm(); } else { modal.hide(); showCenteredToast("Zalogowano pomyślnie!"); window.location.reload(); }
                    }catch(err){ showCenteredToast("Błąd logowania.","danger"); console.error(err);}
                });
            }

            function setupForgotForm(){ const form = modalBody.querySelector("#forgotPasswordForm"); if(!form) return;
                form.addEventListener("submit", async e=>{
                    e.preventDefault();
                    const formData = new FormData(form);
                    try{ const res = await fetch(form.action || "/Identity/Account/ForgotPassword",{method:"POST", body:formData});
                        if(res.ok){ showCenteredToast("✉️ Sprawdź swoją skrzynkę e-mail."); form.reset(); } else { showCenteredToast("Błąd wysyłania prośby.","danger"); }
                    }catch(err){ showCenteredToast("Błąd wysyłania prośby.","danger"); console.error(err);}
                });
            }

            function setupResendForm(){ const form = modalBody.querySelector("#resendEmailForm"); if(!form) return;
                form.addEventListener("submit", async e=>{
                    e.preventDefault();
                    const formData = new FormData(form);
                    try{ const res = await fetch(form.action || "/Identity/Account/ResendEmailConfirmation",{method:"POST",body:formData});
                        if(res.ok){ showCenteredToast("✉️ E-mail z potwierdzeniem wysłany."); form.reset(); } else { showCenteredToast("Błąd wysyłania e-mail.","danger"); }
                    }catch(err){ showCenteredToast("Błąd wysyłania e-mail","danger"); console.error(err);}
                });
            }

            // Obsługa linków logowania/rejestracji w navbarze
            $("[data-auth]").click(function(e){ e.preventDefault();
                const type = $(this).data("auth");
                if(type==="login") loadAuthPage("/Identity/Account/Login","Logowanie");
                else if(type==="register") loadAuthPage("/Identity/Account/Register","Rejestracja");
            });

            function showCenteredToast(message,type="success"){
                const toast = document.getElementById("centerToast");
                toast.innerText = message;
                toast.className = `position-fixed top-50 start-50 translate-middle px-4 py-3 rounded shadow text-white bg-${type==="danger"?"danger":"success"}`;
                toast.style.display="block"; toast.style.opacity="0";
                setTimeout(()=>{ toast.style.transition="opacity 0.5s"; toast.style.opacity="1"; },10);
                setTimeout(()=>{ toast.style.opacity="0"; setTimeout(()=>toast.style.display="none",500); },3000);
            }

            // 🔹 WYSZUKIWANIE I HISTORIA
            const $input = $('#searchInput');
            const $results = $('#searchResults');
            const $history = $('#searchHistory');

                    function loadHistory() {
            const history = JSON.parse(localStorage.getItem('searchHistory') || '[]');
            $history.empty();
            if(history.length === 0) { $history.hide(); return; }

            history.forEach(item => {
                const li = $(`
                    <li class="list-group-item d-flex align-items-center gap-2">
                        <img src="${item.defaultImage || '/images/no-image.png'}" style="width:40px;height:40px;object-fit:contain"/>
                        <span class="history-term flex-grow-1">${item.title}</span>
                        <button class="btn btn-sm btn-outline-danger btn-clear">×</button>
                    </li>
                `);
                // klik w historię -> ustaw wartość i wywołaj input
                li.find('.history-term, img').on('click', () => {
                    $input.val(item.title).trigger('input');
                    $history.hide();
                });
                // usuń z historii
                li.find('.btn-clear').on('click', e => { e.stopPropagation(); removeFromHistory(item.title); });
                $history.append(li);
            });
            $history.show();
        }


            function addToHistory(product) {
            let history = JSON.parse(localStorage.getItem('searchHistory') || '[]');
            history = history.filter(p => p.title !== product.title);
            history.unshift(product);
            if(history.length>5) history.pop();
            localStorage.setItem('searchHistory', JSON.stringify(history));
        }

             function removeFromHistory(title) {
            let history = JSON.parse(localStorage.getItem('searchHistory') || '[]');
            history = history.filter(p=>p.title!==title);
            localStorage.setItem('searchHistory', JSON.stringify(history));
            loadHistory();
        }

             // Klik w input -> pokaż historię
        $input.on('focus', function() {
            if($(this).val().trim().length===0) loadHistory();
        });

            // Wpisywanie -> AJAX wyniki
        $input.on('input', function() {
            const term = $(this).val().trim();
            if(term.length===0) { $results.hide(); loadHistory(); return; }
            $history.hide();

            $.get('/Shop/SearchProducts', { term }, function(data){
                $results.empty();
                if(data.length===0){ $results.hide(); return; }
                data.forEach(item=>{
                    const li = $(`
                        <li class="list-group-item d-flex align-items-center gap-2">
                            <img src="${item.defaultImage}" style="width:40px;height:40px;object-fit:contain"/>
                            <div>
                                <div class="fw-semibold">${item.title}</div>
                                <small class="text-muted">${item.price.toFixed(2)} zł</small>
                            </div>
                        </li>
                    `);
                    li.data('product', item);
                    li.on('click', ()=> { addToHistory(item); window.location.href=`/Shop/Product/${item.id}`; });
                    $results.append(li);
                });
                $results.show();
            });
        });

             // Klik poza input -> ukryj wszystko
        $(document).on('click', function(e){
            if(!$(e.target).closest('#searchForm').length){ $results.hide(); $history.hide(); }
        });

            $('#searchForm').submit(function(e){
                e.preventDefault();
                const firstResult = $results.children().first().data('url');
                const firstHistory = $history.children().first().find('.history-term').text();
                if(firstResult){ addToHistory($input.val().trim()); window.location.href = firstResult; }
                else if(firstHistory){ $input.val(firstHistory).trigger('input'); }
            });

        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
