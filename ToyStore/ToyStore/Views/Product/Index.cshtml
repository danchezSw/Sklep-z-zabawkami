@model IEnumerable<ToyStore.Model.DataModels.Product>

@{
    ViewData["Title"] = "Zarządzanie produktami";
}

<h2>Zarządzanie produktami</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj produkt</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Kategoria</th>
            <th>Cena</th>
            <th>Ilość</th>
            <th>Opcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category?.Name</td>
                <td>@item.Price.ToString("0.00") zł</td>
                <td>@item.StockQuantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
