@{
    ViewData["Title"] = "Sklep - ToyStore";
}

<style>
    .category-img {
        max-height: 200px; /* ograniczenie wysokości */
        max-width: 100%; /* nie wychodzi poza kartę */
        object-fit: contain; /* zachowuje proporcje */
        display: block;
        margin: 0 auto;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover .category-img {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .btn-back {
        background-color: #28a745;
        color: white;
        font-size: 1.1rem;
        padding: 10px 25px;
        border: none;
        border-radius: 8px;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
        text-decoration: none;
    }

        .btn-back:hover {
            transform: scale(1.1);
            background-color: #218838;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            color: white;
        }
</style>


<div class="container my-5">
    <h1 class="text-center mb-4 text-primary">Kategorie produktów</h1>
    <p class="text-center text-muted mb-5">Wybierz kategorię zabawek, aby zobaczyć produkty 🎁</p>

    <div class="row row-cols-1 row-cols-md-3 g-4">

        <!-- KLOCKI -->
        <div class="col">
            <a asp-controller="Shop" asp-action="Category" asp-route-name="klocki" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <img src="/images/klocki.jpg" class="card-img-top category-img" alt="Klocki">
                    <div class="card-body">
                        <h5 class="card-title">Klocki</h5>
                        <p class="card-text">Kreatywne zestawy klocków dla dzieci w każdym wieku.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- MISIE -->
        <div class="col">
            <a asp-controller="Shop" asp-action="Category" asp-route-name="misie" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <img src="/images/pluszak.jpg" class="card-img-top category-img" alt="Misie">
                    <div class="card-body">
                        <h5 class="card-title">Misie</h5>
                        <p class="card-text">Pluszaki: ośmiornica, kurczak, miś i inne mięciutkie zabawki.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- GRY EDUKACYJNE -->
        <div class="col">
            <a asp-controller="Shop" asp-action="Category" asp-route-name="gry" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <img src="/images/gry.jpg" class="card-img-top category-img" alt="Gry edukacyjne">
                    <div class="card-body">
                        <h5 class="card-title">Gry edukacyjne</h5>
                        <p class="card-text">Rozwijające gry planszowe, puzzle i zestawy edukacyjne.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- BARBIE -->
        <div class="col">
            <a asp-controller="Shop" asp-action="Category" asp-route-name="barbie" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <img src="/images/barbieblond.jpg" class="card-img-top category-img" alt="Barbie">
                    <div class="card-body">
                        <h5 class="card-title">Barbie</h5>
                        <p class="card-text">Lalki Barbie w różnych stylizacjach i kolorach włosów.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- HOT WHEELS -->
        <div class="col">
            <a asp-controller="Shop" asp-action="Category" asp-route-name="hotwheels" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <img src="/images/hotwheels1.jpg" class="card-img-top category-img" alt="Hot Wheels">
                    <div class="card-body">
                        <h5 class="card-title">Hot Wheels</h5>
                        <p class="card-text">Zestawy samochodzików Hot Wheels i tory wyścigowe.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>



    <!-- 🔹 Przycisk powrotu -->
    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn-back">← Powrót do strony głównej</a>
    </div>
</div>
