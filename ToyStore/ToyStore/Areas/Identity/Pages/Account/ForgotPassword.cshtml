@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Odzyskiwanie hasła";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">

            <div class="text-center mb-4">
                <h3 class="fw-bold">@ViewData["Title"]</h3>
                <p class="text-muted small">
                    Podaj adres e-mail powiązany z kontem. Wyślemy Ci link do zmiany hasła.
                </p>
            </div>

            <form id="forgotPasswordForm" method="post">
                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger d-none"
                     role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control"
                           autocomplete="email"
                           aria-required="true"
                           placeholder="name@example.com" />
                    <label asp-for="Input.Email">Adres e-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <button id="resetPasswordBtn"
                        type="submit"
                        class="btn btn-primary w-100 py-2">
                    Wyślij link resetujący
                </button>

                <div class="text-center mt-3">
                    <a asp-page="/Account/Login" class="text-decoration-none">
                        ← Powrót do logowania
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document
            .getElementById("forgotPasswordForm")
            .addEventListener("submit", async function (e) {

                e.preventDefault();
                const form = e.target;
                const formData = new FormData(form);

                const res = await fetch(form.action || "/Identity/Account/ForgotPassword", {
                    method: "POST",
                    body: formData
                });

                if (res.ok) {
                    showCenteredToast("✉️ Sprawdź swoją skrzynkę e-mail, aby zresetować hasło.");
                    form.reset();
                } else {
                    showCenteredToast("❌ Wystąpił błąd podczas wysyłania prośby.", "danger");
                }
            });
    </script>
}
