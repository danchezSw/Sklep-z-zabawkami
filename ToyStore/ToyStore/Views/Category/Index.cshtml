@model IEnumerable<ToyStore.Model.DataModels.Category>

@{
    ViewData["Title"] = "Zarządzanie kategoriami";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj kategorię</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Miniatura</th>
            <th>Nazwa</th>
            <th>Adres (Slug)</th>
            <th>Opis</th>
            <th>Produkty</th>
            <th>Opcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="~/images/categories/@item.ImageUrl" alt="@item.Name" style="max-width:60px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Brak zdjęcia</span>
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Slug</td>
                <td>@item.Description</td>
                <td>@(item.Products?.Count() ?? 0)</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-warning">
                        Edytuj
                    </a>

                    @if (item.Products != null && item.Products.Any())
                    {
                        <button class="btn btn-sm btn-secondary" disabled
                                title="Nie można usunąć kategorii z produktami">
                            Usuń
                        </button>
                    }
                    else
                    {
                        <a asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-danger">
                            Usuń
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
