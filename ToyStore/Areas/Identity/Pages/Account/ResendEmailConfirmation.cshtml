@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Wyślij ponownie email z potwierdzeniem";
}
@{
    Layout = null;
}

<h1>@ViewData["Title"]</h1>
<h2>Podaj swój email:</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="resendEmailForm" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Wyślij</button>
            <p><a href="javascript:void(0);" data-switch="login">Wróć do logowania</a></p>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
