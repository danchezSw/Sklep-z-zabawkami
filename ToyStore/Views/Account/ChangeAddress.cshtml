@model ToyStore.ViewModels.VM.ChangeAddressVm

@{
    ViewData["Title"] = "Zmień adres";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="ChangeAddress" method="post">
            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz</button>
        </form>

        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Wróc</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
