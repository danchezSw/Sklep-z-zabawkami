@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Wysłano wiadomość";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 text-center" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">

            <div class="mb-3">
                <div class="fs-1">✅</div>
            </div>

            <h4 class="fw-bold mb-2">
                Wiadomość została wysłana
            </h4>

            <p class="text-muted mb-4">
                Sprawdź swoją skrzynkę e-mail i postępuj zgodnie z instrukcjami,
                aby zresetować hasło.
            </p>

            <a asp-page="/Account/Login"
               class="btn btn-primary w-100 py-2">
                Powrót do logowania
            </a>

            <button type="button"
                    class="btn btn-link text-decoration-none mt-3"
                    onclick="showCenteredToast('✉️ Link resetujący został wysłany ponownie.')">
                Wyślij ponownie
            </button>

        </div>
    </div>
</div>
