@model ToyStore.Model.DataModels.Category

<h2>@Model.Name</h2>

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-3 mb-3">
            <div class="card product-card">
                <img src="@product.DefaultImageUrl" class="card-img-top product-img" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price zł</p>
                    <a href="@Url.Action("Product", "Shop", new { id = product.Id })" class="btn btn-primary mt-auto">Zobacz</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .product-card {
        height: 100%;
        display: flex;
        flex-direction: column;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .product-img {
        height: 250px; /* ustalona wysokość obrazka */
        width: 100%;
        object-fit: contain; /* obrazek dopasowany do wymiarów bez zniekształceń */
        background-color: #f8f8f8; /* jeśli obrazek ma przezroczystość */
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

    .btn-back {
        background-color: #28a745;
        color: white;
        font-size: 1.1rem;
        padding: 10px 25px;
        border: none;
        border-radius: 8px;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
        text-decoration: none;
    }

        .btn-back:hover {
            transform: scale(1.1);
            background-color: #218838;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            color: white;
        }
</style>
