@{
    ViewData["Title"] = "ToyStore - Sklep z zabawkami";
}
@using ToyStore.Web.Models

<div class="text-center my-5">
    <h1 class="display-3 fw-bold text-primary">Witamy w ToyStore!</h1>
    <p class="lead text-secondary">Najlepsze zabawki dla dzieci w każdym wieku 🎁</p>
    <a asp-controller="Shop" asp-action="Index" class="btn btn-lg btn-primary mt-3">Zobacz ofertę</a>
</div>

<hr class="my-5" />

<h2 class="text-center mb-4">NOWOŚCI</h2>
<div class="row row-cols-2 row-cols-md-4 g-3">
    <!-- mniejsze marginesy -->
    @if (ViewData["NewProducts"] is List<HomeProductModel> newProducts)
    {
        foreach (var product in newProducts)
        {
            <div class="col">
                <a asp-controller="Shop" asp-action="Product" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm" style="max-height: 220px;">
                        <!-- mniejsza wysokość -->
                        <img src="@Url.Content(product.Image)" class="card-img-top product-img" style="max-height: 120px; object-fit: contain;" />
                        <div class="card-body text-center p-2">
                            <h6 class="card-title mb-0">@product.Title</h6>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>

<hr class="my-5" />

<h2 class="text-center mb-4">Nasze kategorie</h2>

<div id="toyCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">

        <!-- KLOCKI -->
        <div class="carousel-item active">
            <a asp-controller="Shop" asp-action="Category" asp-route-id="4">
                <img src="~/images/klocki.jpg" class="d-block w-100 carousel-img" alt="Klocki" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Klocki</h5>
                    <p>Rozwijaj kreatywność i wyobraźnię dziecka dzięki naszym zestawom klocków!</p>
                </div>
            </a>
        </div>

        <!-- PLUSZAKI -->
        <div class="carousel-item">
            <a asp-controller="Shop" asp-action="Category" asp-route-id="5">
                <img src="~/images/pluszak.jpg" class="d-block w-100 carousel-img" alt="Pluszaki" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Pluszaki</h5>
                    <p>Miękkie, przytulne i zawsze gotowe na zabawę — znajdź swojego ulubionego misia!</p>
                </div>
            </a>
        </div>

        <!-- inne kategorie analogicznie ... -->

    </div>

    <!-- Kontrolki i wskaźniki jak wcześniej -->
</div>

<style>
    .carousel-img {
        max-height: 250px; /* ograniczenie wysokości do rozmiaru kafelka */
        width: auto; /* zachowanie proporcji */
        margin: 0 auto; /* wycentrowanie w poziomie */
        object-fit: contain; /* dopasowanie obrazu bez przycinania */
    }
</style>
