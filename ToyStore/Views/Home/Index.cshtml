@{
    ViewData["Title"] = "ToyStore - Sklep z zabawkami";
}
@using ToyStore.Controllers
<style>
    /* Efekt powiększenia kart */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    /* Styl karuzeli - dopasowanie do obrazków */
    .carousel-item img {
        width: 100%;
        height: auto;
        max-height: 600px;
        object-fit: contain;
        border-radius: 15px;
        background-color: #f8f9fa;
    }

    .carousel-caption {
        background: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        padding: 10px 20px;
    }

    /* 🔹 Efekt dla wszystkich przycisków */
    .btn {
        transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.08);
            filter: brightness(0.9);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

    /* 🔹 Efekt dla linków w navbarze (nagłówku strony) */
    .navbar a.nav-link {
        transition: color 0.3s ease, text-shadow 0.3s ease;
    }

        .navbar a.nav-link:hover {
            color: #0d6efd; /* lekko niebieski odcień */
            text-shadow: 0 0 5px rgba(13, 110, 253, 0.4);
        }
</style>

<div class="text-center my-5">
    <h1 class="display-3 fw-bold text-primary">Witamy w ToyStore!</h1>
    <p class="lead text-secondary">Najlepsze zabawki dla dzieci w każdym wieku 🎁</p>
    <a asp-controller="Shop" asp-action="Index" class="btn btn-lg btn-primary mt-3">Zobacz ofertę</a>
</div>

<hr class="my-5" />
<h2 class="text-center mb-4">NOWOŚCI</h2>
<div class="row row-cols-1 row-cols-md-4 g-4">
    @if (ViewData["NewProducts"] is List<HomeController.HomeProductModel> newProducts)
    {
        foreach (var product in newProducts)
        {
            <div class="col">
                <a asp-controller="Shop" asp-action="Product" asp-route-name="@product.Key" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(product.Image)" class="card-img-top product-img" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Title</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>

<style>
    .product-img {
        max-height: 200px;
        object-fit: contain;
    }

    .btn-back {
        background-color: #28a745;
        color: white;
        font-size: 1.1rem;
        padding: 10px 25px;
        border: none;
        border-radius: 8px;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
        text-decoration: none;
    }

        .btn-back:hover {
            transform: scale(1.1);
            background-color: #218838;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            color: white;
        }
</style>

<div class="container">
    <h2 class="text-center mb-4">Nasze kategorie</h2>

    <!-- 🔹 Karuzela Bootstrap -->
    <div id="toyCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner rounded shadow">

            <!-- KLOCKI -->
            <div class="carousel-item active">
                <a asp-controller="Shop" asp-action="Category" asp-route-name="klocki">
                    <img src="~/images/klocki.jpg" class="d-block w-100" alt="Klocki">
                    <div class="carousel-caption">
                        <h5>Klocki</h5>
                        <p>Rozwijaj kreatywność i wyobraźnię dziecka dzięki naszym zestawom klocków!</p>
                    </div>
                </a>
            </div>

            <!-- PLUSZAKI -->
            <div class="carousel-item">
                <a asp-controller="Shop" asp-action="Category" asp-route-name="misie">
                    <img src="~/images/pluszak.jpg" class="d-block w-100" alt="Pluszaki">
                    <div class="carousel-caption">
                        <h5>Pluszaki</h5>
                        <p>Miękkie, przytulne i zawsze gotowe na zabawę — znajdź swojego ulubionego misia!</p>
                    </div>
                </a>
            </div>

            <!-- GRY EDUKACYJNE -->
            <div class="carousel-item">
                <a asp-controller="Shop" asp-action="Category" asp-route-name="gry">
                    <img src="~/images/gry.jpg" class="d-block w-100" alt="Gry edukacyjne">
                    <div class="carousel-caption">
                        <h5>Gry edukacyjne</h5>
                        <p>Ucz się przez zabawę — gry, które rozwijają pamięć, logikę i spostrzegawczość.</p>
                    </div>
                </a>
            </div>

            <!-- BARBIE -->
            <div class="carousel-item">
                <a asp-controller="Shop" asp-action="Category" asp-route-name="barbie">
                    <img src="~/images/barbieblond.jpg" class="d-block w-100" alt="Barbie">
                    <div class="carousel-caption">
                        <h5>Barbie</h5>
                        <p>Lalki Barbie w różnych wersjach i akcesoriach dla dzieci w każdym wieku!</p>
                    </div>
                </a>
            </div>

            <!-- HOT WHEELS -->
            <div class="carousel-item">
                <a asp-controller="Shop" asp-action="Category" asp-route-name="hotwheels">
                    <img src="~/images/hotwheels1.jpg" class="d-block w-100" alt="Hot Wheels">
                    <div class="carousel-caption">
                        <h5>Hot Wheels</h5>
                        <p>Samochodziki Hot Wheels i tory wyścigowe dla małych i dużych fanów motoryzacji!</p>
                    </div>
                </a>
            </div>

        </div>

        <!-- Kontrolki karuzeli -->
        <button class="carousel-control-prev" type="button" data-bs-target="#toyCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Poprzedni</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#toyCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Następny</span>
        </button>

        <!-- 🔹 Wskaźniki karuzeli -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#toyCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Klocki"></button>
            <button type="button" data-bs-target="#toyCarousel" data-bs-slide-to="1" aria-label="Pluszaki"></button>
            <button type="button" data-bs-target="#toyCarousel" data-bs-slide-to="2" aria-label="Gry edukacyjne"></button>
            <button type="button" data-bs-target="#toyCarousel" data-bs-slide-to="3" aria-label="Barbie"></button>
            <button type="button" data-bs-target="#toyCarousel" data-bs-slide-to="4" aria-label="Hot Wheels"></button>
        </div>
    </div>


</div>

<hr class="my-5" />

<div class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-3">Dlaczego ToyStore?</h2>
        <p class="text-muted mb-4">Szybka wysyłka, atrakcyjne ceny i szeroki wybór zabawek od najlepszych producentów!</p>
        <a asp-controller="Shop" asp-action="Index" class="btn btn-success btn-lg">Przejdź do sklepu</a>
    </div>
</div>
