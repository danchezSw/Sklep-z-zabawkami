@model IEnumerable<ToyStore.Model.DataModels.Category>

@{
    ViewData["Title"] = "Zarządzanie kategoriami";
}

<h2>Zarządzanie kategoriami</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj kategorię</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Opcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
