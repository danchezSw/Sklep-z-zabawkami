@model ToyStore.Model.DataModels.Order

<h2>Szczegóły zamówienia #@Model.Id</h2>

<p><strong>Klient:</strong> @Model.CustomerName</p>
<p><strong>Email:</strong> @Model.CustomerEmail</p>
<p><strong>Adres:</strong> @Model.ShippingAddress</p>
<p><strong>Status:</strong> @Model.Status</p>
<p><strong>Data:</strong> @Model.OrderDate.ToString("g")</p>

<h3>Produkty</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Zdjęcie</th>
            <th>Nazwa produktu</th>
            <th>Kolor</th>
            <th>Ilość</th>
            <th>Cena jednostkowa</th>
            <th>Łącznie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@Url.Content(item.ImageUrl)" alt="@item.ProductName" style="height:50px;" />
                    }
                </td>
                <td>@item.ProductName</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Color))
                    {
                        <span class="ms-1">@item.Color</span>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="5" class="text-end">Łącznie:</th>
            <th>@Model.OrderItems.Sum(oi => oi.Quantity * oi.UnitPrice).ToString("C")</th>
        </tr>
    </tfoot>
</table>

<a asp-action="Index" class="btn btn-secondary">Powrót</a>
