@model ToyStore.Model.DataModels.Category

<div asp-validation-summary="All" class="text-danger"></div>

<div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Slug" class="form-label"></label>
    <input asp-for="Slug" class="form-control" />
    <span asp-validation-for="Slug" class="text-danger"></span>
    <small class="form-text text-muted">Przykład: zabawki-dla-dzieci</small>
</div>

<div class="mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="mb-3">
    <label class="form-label">Zdjęcie kategorii</label>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-2">
            <img src="~/images/categories/@Model.ImageUrl" alt="@Model.Name" style="max-width:150px;" class="img-thumbnail" />
        </div>
        <small class="form-text text-muted">Aktualne zdjęcie. Wybierz nowe, aby je zmienić.</small>
    }

    <input type="file" name="ImageFile" class="form-control mt-1" accept=".jpg,.jpeg,.png" />
    <small class="form-text text-muted">Dozwolone formaty: JPG, JPEG, PNG</small>
</div>
